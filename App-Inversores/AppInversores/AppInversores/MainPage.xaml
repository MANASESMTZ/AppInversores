<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppInversores.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="App INVERSORES" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Inversion 1" />
        <Entry Placeholder="Escribir el monto" Keyboard="Numeric" x:Name="INVERSION1" />
        
        <Label Text="Inversion 2" />
        <Entry Placeholder="Escribir el monto" Keyboard="Numeric" x:Name="INVERSION2" />
               
        <Label Text="Inversion 3" />
        <Entry Placeholder="Escribir el monto" Keyboard="Numeric" x:Name="INVERSION3" />
            
        <Button Text="Calcular Porcentaje(%)" Clicked="Button_Clicked" />
        
        
    </StackLayout>

</ContentPage>

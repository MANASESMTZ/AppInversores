<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppInversores.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Porcentajes de Inversion" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Total De Inversion" />
            <Entry IsEnabled="False" x:Name="Total" />

            <Label Text="%Inversor 1" />
            <Entry IsEnabled="False" x:Name="INV1" />

            <Label Text="%Inversor 2" />
            <Entry IsEnabled="False" x:Name="INV2" />

            <Label Text="%Inversor 3" />
            <Entry IsEnabled="False" x:Name="INV3" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>